unit FCapInfo;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TF_CapInfo = class(TForm)
    Memo1: TMemo;
  private
    { Private declarations }
  public
    procedure UpdateInfo(info:string);
    procedure AppendExtInfo(infoList:string);
  end;

var
  F_CapInfo: TF_CapInfo;

implementation

{$R *.dfm}

{ TF_CapInfo }

procedure TF_CapInfo.AppendExtInfo(infoList: TStrings);
begin
  self.Memo1.Lines.AddStrings(infoList);
end;

procedure TF_CapInfo.UpdateInfo(info: string);
begin
  self.Memo1.Text := info;

end;

end.
